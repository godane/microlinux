PRGNAM=libreoffice-langpack
VERSION=${VERSION:-"5.2.3"}
BUILD=${BUILD:-1}
TAG=${TAG:-_microlinux}

#LOLANG=${LOLANG:-en-GB}
#PKG_LANG=${LOLANG//-/_}
LOLANG=${LOLANG:-fr}

# I'll leave this line here, as I always have to change it with every release
SRCVERSION=$VERSION
SRCSHORT=$(echo $VERSION | cut -f1-2 -d.)

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/microlinux}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

# Change source package name
if [ "$ARCH" = "x86_64" ]; then
  SRCARCH="x86-64"
  PKGARCH="$ARCH"
  URLARCH="x86_64"
  LIBDIRSUFFIX=64
elif [ "$ARCH" = "arm" ]; then
  printf "\n$ARCH is unsupported for LibreOffice...\n\n"
  exit 1
else
  SRCARCH="x86"
  PKGARCH="i586"
  URLARCH="x86"
  LIBDIRSUFFIX=""
fi

set -e

# Concatenate all parts to get the full name of the tarball
TARNAME="LibreOffice_${SRCVERSION}_Linux_${SRCARCH}_rpm_langpack_${LOLANG}.tar.gz"

# LibreOffice admins love to play hide & seek with their tarballs
MIRROR=download.documentfoundation.org/libreoffice/stable/$VERSION/rpm/$URLARCH
#MIRROR="www.microlinux.fr/download/libreoffice/$VERSION"

DOWNLOAD="http://$MIRROR/$TARNAME"

wget -c $DOWNLOAD

# Get "base" directory of tarball
SOURCEDIR=$(tar tzf $CWD/$TARNAME 2>/dev/null | head -n 1 | tr -d \/)

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
rm -rf $TMP/$SOURCEDIR

tar xvf $CWD/$TARNAME -C $TMP

cd $TMP/$SOURCEDIR/RPMS/

for FILE in *.rpm ; do rpm2cpio < $FILE | cpio -imdv ; done
mv opt $PKG
cd $PKG

# Move docs to their expected locations
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cd $PKG/opt/libreoffice$SRCSHORT
  mv readmes $PKG/usr/doc/$PRGNAM-$VERSION
cd -
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc-$LOLANG > $PKG/install/slack-desc

# Fix ownership and permissions and make the package
chown -R root:root .
find . -type d -exec chmod 755 {} \;
chmod -R u+rw,go+r-w,a-s .

/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-${LOLANG}-${VERSION}-$PKGARCH-$BUILD$TAG.${PKGTYPE:-txz}
