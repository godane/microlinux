# ~/.bashrc

# Alias
alias ls='ls --color=auto'
alias ll='ls -al'
alias ..='cd ..'
alias ...='cd ../..'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias vi='vim'
alias uman='GROFF_ENCODING=utf8 man'

# PS1
WHITE='\[\033[1;37m\]'
RED='\[\033[0;33m\]'
NC='\[\033[0m\]'
PS1="$RED[$WHITE\u$NC@$WHITE\h$NC:$WHITE\W$RED] #$NC "

# Vim
EDITOR=vim
VISUAL=$EDITOR
export EDITOR VISUAL
